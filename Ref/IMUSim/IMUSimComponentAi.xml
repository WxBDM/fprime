<component name="IMUSim" kind="active" namespace="Ref">
    <import_port_type>Ref/IMUPorts/IMUSimResPortAi.xml</import_port_type>
    <import_port_type>Ref/IMUPorts/IMUDriverReqPortAi.xml</import_port_type>
    <ports>
        <port name="tempOut" data_type="Ref::IMUSimRes" kind="output">
        </port>
        <port name="driverReqIn" data_type="Ref::IMUDriverReq" kind="async_input">
        </port>
    </ports>
    <commands>
        <command kind="async" opcode="0" mnemonic="IMU_SET_ROTATION">
            <args>
                <arg name="x_axis" type="F32"> </arg>
				<arg name="y_axis" type="F32"> </arg>
				<arg name="z_axis" type="F32"> </arg>
            </args>
        </command>
    </commands>
    <telemetry>
        <channel id="0" name="IMUSIM_X_VAL" data_type="F32"> </channel>
		<channel id="1" name="IMUSIM_Y_VAL" data_type="F32"> </channel>
		<channel id="2" name="IMUSIM_Z_VAL" data_type="F32"> </channel>
    </telemetry>
    <events>
        <event id="0" name="IMUSIM_ANG_VEL_CHANGED" severity="ACTIVITY_HI" format_string="Velocities changed to x: %f, y: %f, z: %f" >
            <args>
                <arg name="new_xVel" type="F32"> </arg>     
				<arg name="new_yVel" type="F32"> </arg>
				<arg name="new_zVel" type="F32"> </arg>    
            </args>
        </event>
        <event id="1" name="IMUSIM_ANG_VEL_REQUESTED" severity="ACTIVITY_LO" format_string = "IMUSim received velocities request (x: %f, y: %f, z: %f) from IMUDriver" >
            <args>
                <arg name="reqX" type="F32"> </arg> 
				<arg name="reqY" type="F32"> </arg>
				<arg name="reqZ" type="F32"> </arg>         
            </args>
        </event>
    </events>
</component>
